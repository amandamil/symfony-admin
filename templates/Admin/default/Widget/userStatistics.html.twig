{% if widget.isActive %}
    <div class="widget box-3 box-col-3 widget_{{ widget.id }}" data-order="{{ path('widget_order', {'widgetId': widget.id, 'order': '0'}) }}">
        <div class="card">
            <div class="card-body p-0 m-1">
                {# Action Button #}
                {% embed '@PdWidget/widgetAction.html.twig' %}
                    {% block add_config %}
                        <a class="dropdown-item {{ widget.config.type is defined and widget.config.type in '1week' ? 'active' }}" href="{{ path('widget_config', { 'widgetId': widget.id, 'type': '1week' }) }}">Son 1 Hafta</a>
                        <a class="dropdown-item {{ widget.config.type is defined and widget.config.type in '1month' ? 'active' }}" href="{{ path('widget_config', { 'widgetId': widget.id, 'type': '1month' }) }}">Son 1 Ay</a>
                        <a class="dropdown-item {{ widget.config.type is defined and widget.config.type in '3month' ? 'active' }}" href="{{ path('widget_config', { 'widgetId': widget.id, 'type': '3month'}) }}">Son 3 Ay</a>
                    {% endblock %}
                {% endembed %}

                {# Canvas #}
                <canvas id="canvas"></canvas>

                {# Draw Canvas #}
                <script>
                  new Chart(document.getElementById('canvas').getContext('2d'), {
                    type: 'line',
                    data: {
                      labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
                      datasets: [{
                        label: 'Login',
                        fill: true,
                        backgroundColor: 'rgba(54, 162, 235, .3)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        data: [10, 20, 30, 40, 50, 60, 70],
                      }, {
                        label: 'Register',
                        backgroundColor: 'rgba(255, 99, 132, .3)',
                        borderColor: 'rgba(255, 99, 132, 1)',
                        data: [70, 60, 50, 40, 30, 20, 10],
                        fill: true,
                      }]
                    },
                    options: {
                      responsive: true,
                      maintainAspectRatio: false,
                      tooltips: {
                        mode: 'index',
                        intersect: false,
                      },
                      hover: {
                        mode: 'nearest',
                        intersect: true
                      },
                      scales: {
                        xAxes: [{
                          display: true,
                          scaleLabel: {
                            display: false,
                            labelString: 'Month'
                          }
                        }],
                        yAxes: [{
                          display: true,
                          scaleLabel: {
                            display: false,
                            labelString: 'Value'
                          }
                        }]
                      }
                    }
                  });
                </script>
            </div>
        </div>
    </div>
{% endif %}
